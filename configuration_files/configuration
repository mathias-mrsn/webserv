server {
	server_name localhost;
	listen 192.0.0.1:8080;
	client_max_body_size 8m;

	location /
	{
		allow_methods GET POST DELETE;
		root www;
		index index.html;

		return 403 www/error_pages/403.html;
		auto_index on;
		cgi .php bin/php-cgi;
		upload www;
	}
}

server {
	server_name exemple2.fr;
	listen 192.0.0.1:8080;
	client_max_body_size 8m;

	location /
	{
		allow_methods GET POST DELETE;
		root www;
		index index.html;

		return 403 www/error_pages/404.html;
		auto_index off;
		cgi .php bin/php-cgi;
		upload www;
	}
}