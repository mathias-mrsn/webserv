server {
	server_name first_server.fr;
	listen 192.0.0.45:8080;
	listen 8090;
	client_max_body_size 15;

	location /
	{
		allow_methods GET DELETE;
		root www;
		# index index.html;

		return 403 www/error_pages/403.html;
		return 405 www/error_pages/405.html;
		auto_index on;
		cgi .php bin/php-cgi;
	}
}

server {
	server_name second_server.fr;
	listen 192.0.0.87:8081;
	error_page 404 www/error_pages/404.html;

	location www
	{
		allow_methods GET POST DELETE;
		root www/Session;

		auto_index on;
		cgi .php bin/php-cgi;
		upload example_html/upload;
	}
}

server {
	server_name third_server.fr;
	listen 192.0.0.203:8082;

	location /
	{
		allow_methods GET POST DELETE;
		root www;

		auto_index on;
		cgi .php bin/php-cgi;
		cgi .hello_world bin/hello_world_cgi;
		upload example_html/upload;
	}
}
