#test

server {
	server_name exemple.fr;
	listen 8081;
	error_page 404 example_html/bar.html;
	client_max_body_size 8m;
	
	location example_html
	{
		allow_methods GET POST DELETE;
		root example_html;
		index bar.html;
		
		return 404 www/error_pages/404.html;
		auto_index on;
		cgi .php example_html/bar.html;
		upload example_html/upload;
	}

	location example_html {
		allow_methods GET POST DELETE;
		root example_html;
		index example_html;
		
		return 404 www/error_pages/404.html;
		auto_index on;
		cgi .php example_html/bar.html;
		upload example_html/upload;
	}
}